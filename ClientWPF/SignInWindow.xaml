<Window x:Class="ClientWPF.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="SignInWindow" Height="209.065" Width="300">
    <Grid Height="184" VerticalAlignment="Top">
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Height="23" Margin="110,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="40,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.272,-0.453" Height="33"/>
        <Button x:Name="SignInButton" Content="Sign in" HorizontalAlignment="Left" Margin="110,125,0,0" VerticalAlignment="Top" Width="100" Click="SignInButton_Click"/>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Left" Height="23" Margin="110,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="40,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.272,-0.453" Height="33"/>

    </Grid>
</Window>
